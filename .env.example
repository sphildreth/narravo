# Core
DATABASE_URL=postgres://narravo:changeme@localhost:5432/narravo

# NextAuth (Auth.js)
# Required for JWT/session encryption. Use `openssl rand -base64 32` or any strong secret.
NEXTAUTH_SECRET=change-me
# For local development this should match your dev URL
NEXTAUTH_URL=http://localhost:3000

# Admin allowlist (comma-separated, case-insensitive)
ADMIN_EMAILS=admin@example.com

# OAuth providers (optional â€” enable by providing both ID and SECRET)
# GitHub OAuth
# GITHUB_ID=
# GITHUB_SECRET=

# Google OAuth
# GOOGLE_ID=
# GOOGLE_SECRET=

# Media storage (choose one: AWS S3-style OR Cloudflare R2-style)
# AWS S3-style
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET=
# Optional for custom S3-compatible endpoints
# S3_ENDPOINT=

# Cloudflare R2-style (S3-compatible)
# R2_REGION=auto
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=
# Public HTTP endpoint to serve files (e.g., https://<accountid>.r2.cloudflarestorage.com)
# R2_ENDPOINT=

