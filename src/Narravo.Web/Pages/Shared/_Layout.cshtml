<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Narravo</title>
    <link rel="stylesheet" href="~/css/narravo-theme.css" />
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <div class="nav-content">
                    <a href="/" class="nav-brand">Narravo</a>
                    <div class="nav-links">
                        <a href="/" class="nav-link">Home</a>
                        <a href="/admin" class="nav-button">Admin</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Narravo. Built with ASP.NET Core.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>